# Copy this file to .env and set your values
# EspoCRM REST client configuration (placeholders)

# Base URL da sua instância EspoCRM (sem barra final)
ESPOCRM_BASE_URL=http://127.0.0.1:8888

# Chave de API gerada no EspoCRM (NÃO COMMITAR CHAVE REAL)
ESPOCRM_API_KEY=SEU_API_KEY_AQUI

# Tipo de autenticação: apikey (padrão) ou bearer
ESPOCRM_AUTH_TYPE=apikey

# Timeout de conexão em segundos (opcional)
ESPOCRM_CONNECT_TIMEOUT=3
# Timeout total da requisição em segundos (opcional)
ESPOCRM_TIMEOUT=8

# Após editar, salve como .env (não remova este exemplo) e garanta que .env está no .gitignore.
